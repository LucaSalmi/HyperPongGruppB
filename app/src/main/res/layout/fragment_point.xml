<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PointFragment">

    <LinearLayout
        android:id="@+id/name_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/frame"
            android:text="@string/points_text"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/frame"
            android:text="@string/high_score_text"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/points_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_row"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/points_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/frame"
            android:text="@string/points_placeholder"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/hi_score_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/frame"
            android:text="@string/points_highscore_holder"
            android:textAlignment="center" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/health_row"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/points_row"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5"
        android:background="@drawable/heartbar"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView

            android:id="@+id/heart_one"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:src="@drawable/heart"
            app:layout_constraintStart_toStartOf="@+id/heart_two"
            app:layout_constraintTop_toTopOf="@+id/heart_three" />

        <ImageView
            android:id="@+id/heart_two"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="68dp"
            android:src="@drawable/heart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/heart_three" />

        <ImageView
            android:id="@+id/heart_three"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="120dp"
            android:src="@drawable/heart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>